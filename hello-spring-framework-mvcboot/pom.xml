            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
            <version>5.2.5.RELEASE</version><!--$NO-MVN-MAN-VER$-->
        </dependency>
        
        <!-- Test -->
        <!-- https://mvnrepository.com/artifact/org.springframework/spring-test -->
